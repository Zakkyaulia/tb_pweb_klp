<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <title>Dashboard Admin - SIPAS</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="flex bg-green-700 min-h-screen text-gray-800">
  <!-- Sidebar -->
  <aside class="w-64 bg-gray-100 p-6 space-y-4">
    <div class="text-center">
      <img src="/logo.png" alt="Logo" class="h-12 mx-auto mb-2" />
      <h1 class="text-green-800 font-bold text-xl">SIPAS</h1>
    </div>
    <nav class="space-y-2">
      <a href="/dashboard-admin" class="block bg-orange-400 text-white py-2 px-4 rounded">Dashboard</a>
      <a href="/permintaan" class="block text-green-700 px-4 py-2 hover:bg-gray-200 rounded">Permintaan</a>

      <div>
        <button class="block w-full text-left text-green-700 font-semibold px-4 py-2 hover:bg-gray-200 rounded">Permintaan</button>
      </div>
      <a href="/template" class="block text-green-700 px-4 py-2 hover:bg-gray-200 rounded">Template</a>
      <a href="/pengumuman" class="block text-green-700 px-4 py-2 hover:bg-gray-200 rounded">Pengumuman</a>
    </nav>
  </aside>

  <!-- Content -->
  <main class="flex-1 bg-white p-6 rounded-lg m-6 shadow">
    <div class="flex justify-between mb-4">
      <div class="flex space-x-4 items-center">
        <label for="jurusan" class="font-bold">Jurusan</label>
        <select id="jurusan" class="px-4 py-1 border border-orange-500 rounded bg-white text-orange-600 font-semibold">
          <option>Teknik Informatika</option>
          <option>Sistem Informasi</option>
          <option>Ilmu Komputer</option>
        </select>
      </div>
      <div class="flex items-center space-x-2">
        <input type="text" placeholder="Cari" class="px-4 py-1 border border-orange-500 rounded" />
        <button class="bg-orange-500 text-white px-2 py-1 rounded">üîç</button>
        <button class="bg-orange-500 text-white px-2 py-1 rounded">üîÑ</button>
      </div>
    </div>

    <!-- Tabel Permintaan -->
    <div class="overflow-x-auto">
      <table class="w-full text-sm text-left border border-collapse">
        <thead class="bg-orange-600 text-white">
          <tr>
            <th class="px-4 py-2">No</th>
            <th class="px-4 py-2">Nama</th>
            <th class="px-4 py-2">NIM</th>
            <th class="px-4 py-2">Tanggal</th>
            <th class="px-4 py-2">Jenis Surat</th>
            <th class="px-4 py-2">Status</th>
            <th class="px-4 py-2">File Pengantar</th>
            <th class="px-4 py-2">Komentar</th>
          </tr>
        </thead>
        <tbody>
          <!-- Data dummy sementara -->
          <tr class="border">
            <td class="px-4 py-2">1</td>
            <td class="px-4 py-2">Zaky Aulia Adrin</td>
            <td class="px-4 py-2">231152</td>
            <td class="px-4 py-2">12 Juni 2025</td>
            <td class="px-4 py-2">Keterangan Lulus</td>
            <td class="px-4 py-2">Diproses</td>
            <td class="px-4 py-2 text-orange-600 font-bold">PDF</td>
            <td class="px-4 py-2">Mohon lengkapi data</td>
          </tr>
        </tbody>
      </table>
    </div>
  </main>
</body>
</html>
