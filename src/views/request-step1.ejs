<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <title>Pengajuan Surat</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-green-700 font-sans">
  <%- include('partials/header', { active: 'Mulai' }) %>
  <main class="max-w-4xl mx-auto mt-10 mb-20">
    <div class="bg-white rounded-xl shadow px-10 py-10">
      <h2 class="text-xl font-bold text-white bg-orange-400 px-4 py-2 rounded-t-xl mb-6">
        <i class="fas fa-file-alt mr-2"></i>Pengajuan Surat
      </h2>

      <form method="POST" action="/request/step1" class="space-y-6" onsubmit="return validateForm()">
        <div>
          <label class="block text-gray-600 mb-2 text-lg font-medium">
            <i class="fas fa-user mr-2"></i>Nama Lengkap
          </label>
          <input type="text" name="nama" id="nama"
                 value="<%= userData.nama || '' %>" readonly
                 class="w-full h-12 rounded-xl border-2 border-gray-300 bg-gray-100 px-4" />
        </div>

        <div>
          <label class="block text-gray-600 mb-2 text-lg font-medium">
            <i class="fas fa-id-card mr-2"></i>NIM
          </label>
          <input type="text" name="nim" id="nim"
                 value="<%= userData.nim || '' %>" readonly
                 class="w-full h-12 rounded-xl border-2 border-gray-300 bg-gray-100 px-4" />
        </div>

        <div>
            <label class="block text-gray-600 mb-2 text-lg font-medium">
              <i class="fas fa-university mr-2"></i>Jurusan
            </label>
            <input type="text" name="jurusan" id="jurusan"
                   value="<%= userData.jurusan || '' %>" readonly
                   class="w-full h-12 rounded-xl border-2 border-gray-300 bg-gray-100 px-4" />
          </div>

        <div>
          <label class="block text-gray-600 mb-2 text-lg font-medium">
            <i class="fas fa-calendar mr-2"></i>Tanggal Pengajuan <span class="text-red-500">*</span>
          </label>
          <input type="date" name="tanggal" id="tanggal" required
                 class="w-full h-12 rounded-xl border-2 border-orange-400 px-4 focus:outline-none focus:border-orange-600 transition-colors duration-200" />
          <div id="tanggalError" class="text-red-500 text-sm mt-1 hidden">Tanggal pengajuan wajib diisi</div>
        </div>

        <div class="text-center mt-6">
          <button type="submit"
                  class="bg-orange-600 hover:bg-orange-700 text-white font-bold px-10 py-3 rounded-full transition-colors duration-200">
            <i class="fas fa-arrow-right mr-2"></i>SELANJUTNYA
          </button>
        </div>
      </form>
    </div>
  </main>

  <script>
    document.getElementById('tanggal').valueAsDate = new Date();

    function validateForm() {
      let isValid = true;
      document.querySelectorAll('[id$="Error"]').forEach(el => el.classList.add('hidden'));

      const tanggal = document.getElementById('tanggal').value;
      if (!tanggal) {
        document.getElementById('tanggalError').classList.remove('hidden');
        isValid = false;
      }

      if (!isValid) {
        alert('Mohon lengkapi tanggal pengajuan!');
      }

      return isValid;
    }
  </script>
</body>
</html>