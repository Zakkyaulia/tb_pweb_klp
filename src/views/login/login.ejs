<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login - SIPAS</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', sans-serif;
      background-color: #3A6B4C; /* Warna hijau dari gambar */
    }
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }
    .animate-fade-in {
      animation: fadeIn 1s ease-in-out;
    }
    /* Custom styles untuk popup dan animasi centang */
    .checkmark-wrapper {
      width: 80px;
      height: 80px;
    }
    .checkmark-circle {
      stroke-dasharray: 166;
      stroke-dashoffset: 166;
      stroke-width: 3;
      stroke-miterlimit: 10;
      stroke: #059669; /* Green-600 */
      fill: none;
      animation: stroke .6s cubic-bezier(.65,0,.45,1) forwards;
    }
    .checkmark-check {
      transform-origin: 50% 50%;
      stroke-dasharray: 48;
      stroke-dashoffset: 48;
      animation: stroke .3s cubic-bezier(.65,0,.45,1) .8s forwards;
    }
    @keyframes stroke {
      100% { stroke-dashoffset: 0; }
    }
    @keyframes scale {
      0%, 100% { transform: none; }
      50% { transform: scale3d(1.1, 1.1, 1); }
    }
    @keyframes fill {
      100% { box-shadow: inset 0 0 0 40px #059669; }
    }
  </style>
</head>
<body class="bg-cover bg-center min-h-screen flex items-center justify-center p-4">
  <header class="absolute top-0 left-0 p-6 flex items-center space-x-4">
    <img src="/images/logo_unand.png" alt="Logo Unand" class="h-14">
    <div class="text-white">
      <h2 class="text-lg font-bold">FAKULTAS TEKNOLOGI INFORMASI</h2>
      <p class="text-sm">UNIVERSITAS ANDALAS</p>
    </div>
  </header>

  <!-- Main Content -->
  <main id="login-container" class="bg-white/20 backdrop-blur-sm rounded-2xl shadow-xl max-w-6xl w-full flex flex-col md:flex-row overflow-hidden animate-fade-in" style="animation-delay: 400ms;">
    <!-- Kolom Kiri: Form Login -->
    <div class="w-full md:w-1/2 text-white flex flex-col justify-center p-8 sm:p-12">
      <h1 class="text-6xl font-bold mb-2">SIPAS</h1>
      <p class="text-lg mb-8">Silahkan Login</p>
      
      <form id="login-form">
        <div class="mb-4">
          <label for="username" class="block text-sm font-medium mb-1">Username</label>
          <input type="text" id="username" name="username" class="w-full bg-white/30 border border-white/40 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-white/80" required>
        </div>
        <div class="mb-6">
          <label for="password" class="block text-sm font-medium mb-1">Password</label>
          <input type="password" id="password" name="password" class="w-full bg-white/30 border border-white/40 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-white/80" required>
        </div>
        <button type="submit" id="login-button" class="w-full bg-orange-600 hover:bg-orange-700 text-white font-bold py-3 rounded-lg transition-transform transform hover:scale-105">LOG IN</button>
      </form>
       <p id="error-message" class="text-red-400 mt-4 text-center font-semibold"></p>
    </div>

    <!-- Kolom Kanan: Gambar -->
    <div class="hidden md:flex w-1/2 items-center justify-center p-8">
      <img src="/images/unand.jpg" alt="Gedung FTI" class="rounded-2xl object-cover w-full h-full">
    </div>
  </main>
  
  <!-- Success Popup (disembunyikan) -->
  <div id="success-popup" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden">
    <div class="bg-white rounded-2xl shadow-xl p-8 max-w-sm w-full text-center transform transition-all scale-95 opacity-0">
      <div class="checkmark-wrapper mx-auto">
        <svg class="checkmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52">
          <circle class="checkmark-circle" cx="26" cy="26" r="25" fill="none"/>
          <path class="checkmark-check" fill="none" d="M14.1 27.2l7.1 7.2 16.7-16.8"/>
        </svg>
      </div>
      <h2 class="text-2xl font-bold text-gray-800 mt-6">Login Berhasil!</h2>
      <p class="text-gray-600 mt-2">Anda akan diarahkan ke halaman admin...</p>
    </div>
  </div>

  <script>
    document.getElementById('login-form').addEventListener('submit', async (e) => {
      e.preventDefault();

      const form = e.target;
      const button = document.getElementById('login-button');
      const errorMessage = document.getElementById('error-message');
      const originalButtonText = button.innerHTML;

      // Tampilkan loading
      button.innerHTML = '<span class="animate-pulse">Logging in...</span>';
      button.disabled = true;
      errorMessage.textContent = '';

      try {
        const response = await fetch('/login', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            username: form.username.value,
            password: form.password.value
          })
        });

        const result = await response.json();

        if (response.ok) {
          const loginContainer = document.getElementById('login-container');
          const popup = document.getElementById('success-popup');
          const popupContent = popup.querySelector('.transform');
          const popupMessage = popup.querySelector('p');

          // Cek role dari respons
          if (result.role === 'admin') {
            popupMessage.textContent = 'Anda akan diarahkan ke halaman admin...';
          } else if (result.role === 'user') {
            popupMessage.textContent = 'Anda akan diarahkan ke dasbor...';
          }

          // Sembunyikan form dan tampilkan popup
          loginContainer.style.display = 'none';
          popup.classList.remove('hidden');
          setTimeout(() => {
            popupContent.classList.remove('scale-95', 'opacity-0');
            popupContent.classList.add('scale-100', 'opacity-100');
          }, 10);

          // Redirect berdasarkan role setelah 2 detik
          setTimeout(() => {
            if (result.role === 'admin') {
              window.location.href = '/admin/dashboard';
            } else if (result.role === 'user') {
              window.location.href = '/user/dashboard';
            }
          }, 2000);

        } else {
          // Tampilkan pesan error
          errorMessage.textContent = result.message || 'Terjadi kesalahan.';
          button.innerHTML = originalButtonText;
          button.disabled = false;
        }
      } catch (error) {
        errorMessage.textContent = 'Tidak dapat terhubung ke server.';
        button.innerHTML = originalButtonText;
        button.disabled = false;
      }
    });
  </script>
</body>
</html>