<!-- views/login_mahasiswa.ejs -->
<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Login - SIPAS</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    body {
      background-color: #3A6B4C; /* Warna hijau dari gambar */
    }
    @keyframes fadeInSlideUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    .animate-fade-in {
      opacity: 0; /* Mulai dari transparan */
      animation: fadeInSlideUp 0.8s ease-out forwards;
    }
  </style>
</head>
<body class="min-h-screen flex flex-col items-center justify-center p-4 sm:p-6">
  <!-- Header -->
  <header class="w-full max-w-6xl mx-auto flex items-center mb-8 animate-fade-in" style="animation-delay: 200ms;">
    <img src="/images/logo_unandd.png" alt="Logo UNAND" class="h-16 w-16 mr-4">
    <div>
      <h1 class="text-white text-lg font-bold">FAKULTAS TEKNOLOGI INFORMASI</h1>
      <h2 class="text-white text-md">UNIVERSITAS ANDALAS</h2>
    </div>
  </header>

  <!-- Main Content -->
  <main class="bg-white/20 backdrop-blur-sm rounded-2xl shadow-xl max-w-6xl w-full flex flex-col md:flex-row overflow-hidden animate-fade-in" style="animation-delay: 400ms;">
    <!-- Kolom Kiri: Form Login -->
    <div class="w-full md:w-1/2 text-white flex flex-col justify-center p-8 sm:p-12">
      <h1 class="text-6xl font-bold mb-2">SIPAS</h1>
      <p class="text-lg mb-8">Silahkan Login</p>

      <% if (error) { %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
          <span class="block sm:inline"><%= error %></span>
        </div>
      <% } %>

      <form action="/login" method="POST" class="w-full flex flex-col gap-4">
        <input type="text" name="username" placeholder="Username" class="h-12 px-4 rounded-xl border-none bg-white/80 text-gray-800 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-orange-500" required />
        <input type="password" name="password" placeholder="Password" class="h-12 px-4 rounded-xl border-none bg-white/80 text-gray-800 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-orange-500" required />
        <button type="submit" class="bg-orange-600 hover:bg-orange-700 text-white rounded-xl py-3 text-lg font-bold transition mt-4">LOG IN</button>
      </form>
    </div>

    <!-- Kolom Kanan: Gambar -->
    <div class="hidden md:flex w-1/2 items-center justify-center p-8">
      <img src="/images/unand.jpg" alt="Gedung FTI" class="rounded-2xl object-cover w-full h-full"> <!-- Ganti dengan path gambar yang benar -->
    </div>
  </main>
</body>
</html>