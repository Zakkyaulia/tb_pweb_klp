<%- include('../partials/admin-header', { title: 'Tambah Template' }) %>
<%- include('../partials/navbar') %>

<style>
  .modal-overlay {
    animation: fadeIn 0.3s ease-out;
  }
  
  .modal-content {
    animation: slideIn 0.3s ease-out;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  
  @keyframes slideIn {
    from { 
      opacity: 0; 
      transform: scale(0.8) translateY(-20px); 
    }
    to { 
      opacity: 1; 
      transform: scale(1) translateY(0); 
    }
  }
  
  .check-icon {
    animation: checkBounce 0.6s ease-out 0.3s both;
  }
  
  @keyframes checkBounce {
    0% { transform: scale(0); }
    50% { transform: scale(1.2); }
    100% { transform: scale(1); }
  }
</style>

<% if (success) { %>
<div class="fixed inset-0 bg-black bg-opacity-40 flex items-center justify-center z-50 modal-overlay">
  <div class="bg-white rounded-lg shadow-lg p-8 w-[400px] text-center modal-content">
    <div class="flex justify-center items-center mb-4">
      <div class="w-20 h-20 border-4 border-orange-400 rounded-full flex items-center justify-center">
        <i class="fas fa-check text-4xl text-orange-500 check-icon"></i>
      </div>
    </div>
    <p class="text-gray-800 text-lg font-medium mb-6">Template berhasil di upload!</p>
    <button onclick="window.location.href='/admin/template'" class="bg-orange-500 text-white px-4 py-2 rounded hover:bg-orange-600 transition-colors duration-200">
    Selesai
    </button>
  </div> 
</div>
<% } %>

<div class="main-content flex-1 p-6">
  <div class="main-header flex justify-between items-center mb-6">
    <h1 class="page-title text-3xl font-semibold text-white"><%= template ? 'Edit Template' : 'Tambah Template' %></h1>
    <%- include('../partials/_user-menu') %>
  </div>
  
  <div class="content-card bg-white rounded-xl shadow-lg p-8 animate-fade-in">
    <h2 class="text-xl font-bold text-gray-800 mb-6"><%= template ? 'Edit Template' : 'Tambah Template Baru' %></h2>

    <% if (error) { %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <strong>Error:</strong> <%= error %>
    </div>
    <% } %>

    <form action="<%= template ? '/admin/template/edit/' + template.surat_id : '/admin/template/add' %>" method="POST" enctype="multipart/form-data">
      <div class="mb-4">
        <label for="name" class="block text-sm font-medium text-gray-700">Nama Template</label>
        <input type="text" name="name" id="name" required
          value="<%= template ? template.jenis_surat : '' %>"
          class="mt-1 block w-full border border-gray-300 rounded px-3 py-2 shadow-sm focus:outline-none focus:ring focus:border-green-500">
      </div>

      <div class="mb-6">
        <label for="templateFile" class="block text-sm font-medium text-gray-700">File Template (PDF)</label>
        <input type="file" name="templateFile" id="templateFile" accept="application/pdf"
          <%= template ? '' : 'required' %>
          class="mt-1 block w-full border border-gray-300 rounded px-3 py-2 shadow-sm focus:outline-none focus:ring focus:border-green-500">
        <p class="text-xs text-gray-500 mt-1">Hanya file berformat .pdf</p>
        <% if (template && template.template_file) { %>
          <p class="text-xs text-blue-500 mt-1">File saat ini: <%= template.template_file %></p>
        <% } %>
      </div>

      <div class="flex justify-end gap-4">
        <a href="/admin/template" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded">Batal</a>
        <button type="submit" class="bg-orange-500 hover:bg-orange-600 text-white px-4 py-2 rounded">Upload</button>
      </div>
    </form>
  </div>
</div>

<script src="/javascript/common.js"></script>

<script>
// Fungsi untuk menutup modal sukses
function closeSuccessModal() {
  window.location.href = '/admin/template';
}

// Event listener untuk menutup modal dengan Escape key
document.addEventListener('keydown', function(event) {
  if (event.key === 'Escape') {
    closeSuccessModal();
  }
});

// Event listener untuk menutup modal dengan klik di luar modal
document.addEventListener('click', function(event) {
  const modal = document.querySelector('.modal-overlay');
  if (event.target === modal) {
    closeSuccessModal();
  }
});
</script>

<%- include('../partials/admin-footer') %>
