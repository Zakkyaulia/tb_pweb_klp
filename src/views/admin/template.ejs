<%- include('../partials/admin-header', { title: 'Kelola Template' }) %>
<%- include('../partials/navbar') %>

<div class="main-content flex-1 p-6">
    <div class="main-header flex justify-between items-center mb-6">
        <h1 class="page-title text-3xl font-semibold text-white">Kelola Template</h1>
        <%- include('../partials/_user-menu') %>
    </div>
    
    <div class="content-card bg-white rounded-xl shadow-lg p-8 animate-fade-in">
        <h2 class="text-xl font-bold text-gray-800 mb-4">Template</h2>
        
        <a href="/admin/template/add" class="bg-orange-600 px-3 py-1 rounded text-white mb-4 inline-block">
            <i class="fas fa-plus mr-1"></i>Tambah Template Baru
        </a>

        <% if (success) { %>
            <div id="popupSuccess" class="mb-4 p-4 bg-green-100 border border-green-400 text-green-800 rounded">
                Template berhasil diupload!
            </div>
        <% } %>

        <table class="w-full text-black border border-gray-300">
            <thead class="bg-orange-600 text-white">
                <tr class="divide-x divide-gray-300 text-center">
                    <th class="px-4 py-2 border-r border-gray-300">No</th>
                    <th class="px-4 py-2 border-r border-gray-300 text-left">Nama Template</th>
                    <th class="px-4 py-2 border-r border-gray-300">Tanggal</th>
                    <th class="px-4 py-2">Aksi</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-300">
                <% if (templates.length === 0) { %>
                    <tr>
                        <td colspan="4" class="text-center py-4">Belum ada template</td>
                    </tr>
                <% } else { %>
                    <% templates.forEach((template, index) => { %>
                        <tr class="text-center">
                            <td class="px-4 py-2 border-r border-gray-200"><%= index + 1 %></td>
                            <td class="px-4 py-2 border-r border-gray-200 text-left text-blue-600 underline cursor-pointer">
                                <a onclick="showTemplatePreview('/uploads/<%= template.template_file %>')"><%= template.jenis_surat %></a>
                            </td>
                            <td class="px-4 py-2 border-r border-gray-200"><%= new Date(template.createdAt).toLocaleDateString('id-ID') %></td>
                            <td class="px-4 py-2 space-x-2">
                                <a href="/admin/template/edit/<%= template.surat_id %>" class="text-blue-600 hover:text-blue-800" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form action="/admin/template/delete/<%= template.surat_id %>" method="POST" class="inline" onsubmit="confirmDelete(event, this)">
                                    <button type="submit" class="text-red-600 hover:text-red-800" title="Hapus">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<!-- Modal Preview Template -->
<div id="templatePreviewModal" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden z-50">
  <div class="bg-white p-4 rounded shadow-md w-full max-w-4xl h-[90vh] flex flex-col">
    <div class="flex justify-between items-center mb-2 flex-shrink-0">
        <h3 class="text-lg font-semibold text-gray-800">Preview Template</h3>
        <button onclick="closeTemplatePreviewModal()" class="text-gray-500 hover:text-gray-800 text-3xl">&times;</button>
    </div>
    <iframe id="templatePreviewFrame" class="w-full flex-grow" src=""></iframe>
  </div>
</div>

<!-- Modal Konfirmasi Hapus -->
<div id="deleteModal" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden z-50">
    <div class="bg-white p-6 rounded shadow-md w-80 text-center">
        <h3 class="text-lg font-semibold text-red-700 mb-2">Konfirmasi Hapus</h3>
        <p class="text-gray-700 mb-4">Apakah kamu yakin ingin menghapus template ini?</p>
        <div class="flex justify-center gap-4">
            <button onclick="cancelDelete()" class="px-4 py-2 bg-gray-300 rounded hover:bg-gray-400">Batal</button>
            <button onclick="confirmDeleteSubmit()" class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700">Hapus</button>
        </div>
    </div>
</div>

<script>
    let deleteForm = null;
    function confirmDelete(event, form) {
        event.preventDefault();
        deleteForm = form;
        document.getElementById('deleteModal').classList.remove('hidden');
    }
    function confirmDeleteSubmit() {
        if (deleteForm) deleteForm.submit();
    }
    function cancelDelete() {
        document.getElementById('deleteModal').classList.add('hidden');
        deleteForm = null;
    }

    const templatePreviewModal = document.getElementById('templatePreviewModal');
    const templatePreviewFrame = document.getElementById('templatePreviewFrame');

    function showTemplatePreview(pdfUrl) {
        templatePreviewFrame.src = pdfUrl;
        templatePreviewModal.classList.remove('hidden');
    }

    function closeTemplatePreviewModal() {
        templatePreviewModal.classList.add('hidden');
        templatePreviewFrame.src = ''; // Hapus src untuk menghentikan loading PDF
    }
</script>

<script src="/javascript/common.js"></script>
<%- include('../partials/admin-footer') %>
