<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Pengajuan - SIPAS</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
rel="stylesheet">
</head>
<body class="bg-green-700 font-sans">
  <%- include('partials/header', { active:
'Riwayat' }) %>

  <main class="max-w-4xl mx-auto mt-10 p-8 bg-white rounded-xl shadow mb-10">
    <h2 class="text-xl font-bold text-white bg-orange-400 px-4 py-2 rounded-t-xl mb-6">
      <i class="fas fa-edit mr-2"></i>Edit Pengajuan Surat
    </h2>

    <form method="POST" action="/request/edit/<%= data.id %>" enctype="multipart/form-data" class="space-y-6" onsubmit="return validateForm()">
      <div>
        <label class="block
text-gray-600 mb-2 text-lg font-medium">
          <i class="fas
fa-user mr-2"></i>Nama Lengkap
        </label>
        <input type="text" name="nama" id="nama"
               value="<%= data.nama || '' %>" readonly
               class="w-full h-12 rounded-xl border-2 border-gray-300 bg-gray-100 px-4" />
      </div>

      <div>
        <label class="block
text-gray-600 mb-2 text-lg font-medium">
          <i class="fas
fa-id-card mr-2"></i>NIM
        </label>
        <input type="text" name="nim" id="nim"
               value="<%= data.nim || '' %>" readonly
               class="w-full h-12 rounded-xl border-2 border-gray-300 bg-gray-100 px-4" />
      </div>

      <div>
          <label class="block
text-gray-600 mb-2 text-lg font-medium">
            <i class="fas
fa-university mr-2"></i>Jurusan
          </label>
          <input type="text" name="jurusan" id="jurusan"
                 value="<%= data.jurusan || '' %>" readonly
                 class="w-full h-12 rounded-xl border-2 border-gray-300 bg-gray-100 px-4" />
        </div>

      <div>
        <label class="block
text-gray-600 mb-2 text-lg font-medium">
          <i class="fas
fa-calendar mr-2"></i>Tanggal Pengajuan <span class="text-red-500">*</span>
        </label>
        <input type="date" name="tanggal" id="tanggal" required
               value="<%= data.tanggal %>"
               class="w-full h-12 rounded-xl border-2 border-orange-400 px-4 focus:outline-none focus:border-orange-600 transition-colors duration-200" />
        <div id="tanggalError" class="text-red-500 text-sm mt-1 hidden">Tanggal pengajuan wajib diisi</div>
      </div>

      <div>
        <label class="block
text-gray-600 mb-2 text-lg font-medium">
          <i class="fas
fa-file-text mr-2"></i>Jenis Surat <span class="text-red-500">*</span>
        </label>
        <select name="jenisSuratId" id="jenisSurat" required
                class="w-full h-12 rounded-xl border-2 border-orange-400 px-4 focus:outline-none focus:border-orange-600 transition-colors duration-200">
          <option value="">-- Pilih Jenis Surat --</option>
          <% if (typeof daftarSurat !== 'undefined' && daftarSurat.length > 0) { %>
            <% daftarSurat.forEach(suratItem => { %>
              <%
                const jenisSuratMapping = {
                  'SKAK': 'Surat Keterangan Aktif Kuliah',
                  'SKL': 'Surat Keterangan Lulus',
                  'SKP': 'Surat Keterangan Pengantar',
                  'SKM': 'Surat Keterangan Magang',
                  'SBSS': 'Surat Berhenti Studi Sementara',
                  'SAK': 'Surat Aktif Kembali',
                  'SKTMB': 'Surat Keterangan Tidak Menerima Beasiswa'
                };
                const displayName = jenisSuratMapping[suratItem.jenis_surat] || suratItem.jenis_surat;
              %>
              <option value="<%= suratItem.surat_id %>" <%= data.jenis === suratItem.jenis_surat ? 'selected' : '' %>>
                <%= displayName %>
              </option>
            <% }) %>
          <% } else { %>
              <option value="" disabled>Tidak ada jenis surat tersedia</option>
          <% } %>
        </select>
        <div id="jenisSuratError" class="text-red-500 text-sm mt-1 hidden">Jenis surat wajib dipilih</div>
      </div>

      <div>
        <label class="block
text-gray-600 mb-2 text-lg font-medium">
          <i class="fas
fa-upload mr-2"></i>File Pengantar (Kosongkan jika tidak ada perubahan)
        </label>
        <input type="file" name="dokumen" id="dokumen"
               accept=".pdf,.doc,.docx,.jpg,.jpeg,.png"
               class="w-full file:mr-4 file:py-2 file:px-4 file:rounded-xl file:border-0 file:text-sm
               file:font-semibold file:bg-orange-400 file:text-white hover:file:bg-orange-500
               border-2 border-orange-400 rounded-xl text-sm text-gray-600 transition-colors duration-200" />
        <% if (data.file_pengantar) { %>
          <!-- Download File Pengantar dihapus -->
        <% } %>
        <div id="dokumenError" class="text-red-500 text-sm mt-1 hidden"></div>
        <p class="text-xs text-gray-500 mt-1">Format file yang diterima: PDF, DOC, DOCX, JPG, JPEG, PNG (Max: 5MB)</p>
      </div>

      <div class="text-center mt-6 space-x-4">
        <a href="/riwayat" class="inline-block bg-gray-500 hover:bg-gray-600 text-white font-bold px-10 py-3 rounded-full transition-colors duration-200">
          <i class="fas fa-arrow-left mr-2"></i>KEMBALI
        </a>
        <button type="submit" class="bg-orange-600 hover:bg-orange-700 text-white font-bold px-10 py-3 rounded-full transition-colors duration-200">
          <i class="fas fa-upload mr-2"></i>PERBARUI
        </button>
      </div>
    </form>
  </main>

  <script>
    let formChanged = false;
    
    // Deteksi perubahan pada form
    document.addEventListener('DOMContentLoaded', function() {
      const form = document.querySelector('form');
      const inputs = form.querySelectorAll('input, select');
      
      inputs.forEach(input => {
        input.addEventListener('change', function() {
          formChanged = true;
        });
        input.addEventListener('input', function() {
          formChanged = true;
        });
      });
    });
    
    // Konfirmasi sebelum kembali jika ada perubahan
    document.querySelector('a[href="/riwayat"]').addEventListener('click', function(e) {
      if (formChanged) {
        const confirmed = confirm('Anda memiliki perubahan yang belum disimpan. Yakin ingin kembali? Perubahan akan hilang.');
        if (!confirmed) {
          e.preventDefault();
        }
      }
    });
    
    function validateForm() {
      let isValid = true;
      document.querySelectorAll('[id$="Error"]').forEach(el => el.classList.add('hidden'));

      const tanggal = document.getElementById('tanggal').value;
      if (!tanggal) {
        document.getElementById('tanggalError').classList.remove('hidden');
        isValid = false;
      }

      const jenisSuratId = document.getElementById('jenisSurat').value;
      if (!jenisSuratId) {
        document.getElementById('jenisSuratError').classList.remove('hidden');
        isValid = false;
      }

      const dokumen = document.getElementById('dokumen').files[0];
      if (dokumen) {
        if (dokumen.size > 5 * 1024 * 1024) {
          document.getElementById('dokumenError').textContent = 'Ukuran file tidak boleh lebih dari 5MB';
          document.getElementById('dokumenError').classList.remove('hidden');
          isValid = false;
        }

        const allowedTypes = ['application/pdf', 'application/msword', 'application/vnd.openxmlformats-officedocument.wordprocessingml.document', 'image/jpeg', 'image/jpg', 'image/png'];
        if (!allowedTypes.includes(dokumen.type)) {
          document.getElementById('dokumenError').textContent = 'Format file tidak didukung';
          document.getElementById('dokumenError').classList.remove('hidden');
          isValid = false;
        }
      }

      if (!isValid) {
        alert('Mohon lengkapi semua field yang wajib diisi dan pastikan formatnya benar!');
        return false;
      }

      // Cek apakah ada perubahan yang sebenarnya
      if (!formChanged) {
        const confirmed = confirm('Tidak ada perubahan yang dilakukan. Yakin ingin melanjutkan?');
        if (!confirmed) {
          return false;
        }
      }

      return true;
    }
  </script>
</body>
</html>