<!-- views/login_admin.ejs -->
<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Login Admin - SIPAS</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-green-700 min-h-screen flex items-center justify-center p-6">
  <div class="bg-white rounded-2xl shadow-xl max-w-4xl w-full flex flex-col md:flex-row">
    <div class="md:w-full text-black flex flex-col items-center justify-center p-8">
      <img src="/images/download.png" class="mb-6 w-3/4 max-w-xs" />
      <h1 class="text-4xl font-bold mb-4">Login Admin</h1>
      <form action="/login/admin" method="POST" class="w-full max-w-sm flex flex-col gap-4">
        <input type="text" name="username" placeholder="Username" class="h-12 px-4 rounded-xl border" required />
        <input type="password" name="password" placeholder="Password" class="h-12 px-4 rounded-xl border" required />
        <button type="submit" class="bg-orange-600 hover:bg-orange-700 text-white rounded-xl py-3 text-lg font-bold">LOG IN</button>
      </form>
    </div>
  </div>
</body>
</html>
