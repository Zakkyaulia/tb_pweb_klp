<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Detail Pengajuan Surat - SIPAS</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-green-700 font-sans">
  <%- include('partials/header', { active: 'Riwayat' }) %>

  <main class="max-w-4xl mx-auto mt-10 p-8 bg-white rounded-xl shadow mb-10">
    <h2 class="text-xl font-bold text-white bg-orange-400 px-4 py-2 rounded-t-xl w-full">Detail Pengajuan Surat</h2>

    <% if (typeof error !== 'undefined' && error) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4 mt-4" role="alert">
        <strong class="font-bold">Error!</strong>
        <span class="block sm:inline"><%= error %></span>
      </div>
    <% } %>

    <div class="bg-white border border-gray-200 rounded-lg p-6 mt-4">
      <!-- Informasi Pengaju -->
      <div class="mb-8">
        <h3 class="text-lg font-semibold text-gray-800 mb-4 border-b border-gray-200 pb-2">
          <i class="fas fa-user mr-2 text-orange-500"></i>Informasi Pengaju
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Nama Lengkap</label>
            <div class="bg-gray-50 border border-gray-300 rounded-lg px-3 py-2 text-gray-900">
              <%= data.nama %>
            </div>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">NIM</label>
            <div class="bg-gray-50 border border-gray-300 rounded-lg px-3 py-2 text-gray-900">
              <%= data.nim %>
            </div>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Jurusan</label>
            <div class="bg-gray-50 border border-gray-300 rounded-lg px-3 py-2 text-gray-900">
              <%= data.jurusan %>
            </div>
          </div>
        </div>
      </div>

      <!-- Informasi Surat -->
      <div class="mb-8">
        <h3 class="text-lg font-semibold text-gray-800 mb-4 border-b border-gray-200 pb-2">
          <i class="fas fa-file-alt mr-2 text-orange-500"></i>Informasi Surat
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Jenis Surat</label>
            <div class="bg-gray-50 border border-gray-300 rounded-lg px-3 py-2 text-gray-900">
              <%= data.nama_lengkap_surat %>
            </div>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Tanggal Pengajuan</label>
            <div class="bg-gray-50 border border-gray-300 rounded-lg px-3 py-2 text-gray-900">
              <%= new Date(data.tanggal_request).toLocaleDateString('id-ID', { 
                weekday: 'long', 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
              }) %>
            </div>
          </div>
        </div>
      </div>

      <!-- Status Pengajuan -->
      <div class="mb-8">
        <h3 class="text-lg font-semibold text-gray-800 mb-4 border-b border-gray-200 pb-2">
          <i class="fas fa-info-circle mr-2 text-orange-500"></i>Status Pengajuan
        </h3>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Status</label>
          <div class="flex items-center">
            <span class="px-3 py-2 rounded-full text-sm font-semibold
              <% if (data.status === 'diproses') { %>bg-yellow-100 text-yellow-800<% } %>
              <% if (data.status === 'selesai') { %>bg-green-100 text-green-800<% } %>
              <% if (data.status === 'diajukan') { %>bg-blue-100 text-blue-800<% } %>
              <% if (data.status === 'disetujui') { %>bg-emerald-100 text-emerald-800<% } %>">
              <% 
                const displayStatus = data.status === 'selesai' ? 'Selesai' : 
                  (data.status === 'diajukan' ? 'Diajukan' : 
                  data.status === 'diproses' ? 'Diproses' : 
                  data.status === 'disetujui' ? 'Disetujui' : data.status);
              %>
              <%= displayStatus %>
            </span>
          </div>
        </div>
      </div>

      <!-- File Pengantar -->
      <div class="mb-8">
        <h3 class="text-lg font-semibold text-gray-800 mb-4 border-b border-gray-200 pb-2">
          <i class="fas fa-paperclip mr-2 text-orange-500"></i>File Pengantar
        </h3>
        <div>
          <% if (data.file_pengantar) { %>
            <div class="bg-green-50 border border-green-200 rounded-lg p-4">
              <div class="flex items-center">
                <i class="fas fa-file-pdf text-red-500 mr-3 text-xl"></i>
                <div>
                  <p class="text-sm font-medium text-green-800">File telah diunggah</p>
                  <p class="text-xs text-green-600">Nama file: <%= data.file_pengantar %></p>
                </div>
              </div>
            </div>
          <% } else { %>
            <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
              <div class="flex items-center">
                <i class="fas fa-times-circle text-gray-400 mr-3 text-xl"></i>
                <p class="text-sm text-gray-600">Tidak ada file yang diunggah</p>
              </div>
            </div>
          <% } %>
        </div>
      </div>

      <!-- Komentar Admin -->
      <div class="mb-8">
        <h3 class="text-lg font-semibold text-gray-800 mb-4 border-b border-gray-200 pb-2">
          <i class="fas fa-comment mr-2 text-orange-500"></i>Komentar Admin
        </h3>
        <div>
          <% if (data.komentar_admin) { %>
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
              <p class="text-sm text-blue-800"><%= data.komentar_admin %></p>
            </div>
          <% } else { %>
            <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
              <p class="text-sm text-gray-600">Belum ada komentar dari admin</p>
            </div>
          <% } %>
        </div>
      </div>

      <!-- Informasi Sistem -->
      <div class="mb-8">
        <h3 class="text-lg font-semibold text-gray-800 mb-4 border-b border-gray-200 pb-2">
          <i class="fas fa-cog mr-2 text-orange-500"></i>Informasi Sistem
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Dibuat Pada</label>
            <div class="bg-gray-50 border border-gray-300 rounded-lg px-3 py-2 text-gray-900 text-sm">
              <%= new Date(data.createdAt).toLocaleDateString('id-ID', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
              }) %>
            </div>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Terakhir Diupdate</label>
            <div class="bg-gray-50 border border-gray-300 rounded-lg px-3 py-2 text-gray-900 text-sm">
              <%= new Date(data.updatedAt).toLocaleDateString('id-ID', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
              }) %>
            </div>
          </div>
        </div>
      </div>

      <!-- Tombol Aksi -->
      <div class="flex justify-end pt-6 border-t border-gray-200">
        <a href="/riwayat" class="bg-orange-600 hover:bg-orange-700 text-white px-6 py-2 rounded-lg transition-colors duration-200">
          <i class="fas fa-arrow-left mr-2"></i>Kembali ke Riwayat
        </a>
      </div>
    </div>
  </main>
</body>
</html> 