<!-- views/login_mahasiswa.ejs -->
<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login - SIPAS</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', sans-serif;
      background-color: #3A6B4C;
    }
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }
    .animate-fade-in {
      animation: fadeIn 1s ease-in-out;
    }
    /* Custom styles untuk popup dan animasi centang */
    .checkmark-wrapper {
      width: 80px;
      height: 80px;
    }
    .checkmark-circle {
      stroke-dasharray: 166;
      stroke-dashoffset: 166;
      stroke-width: 3;
      stroke-miterlimit: 10;
      stroke: #059669; /* Green-600 */
      fill: none;
      animation: stroke .6s cubic-bezier(.65,0,.45,1) forwards;
    }
    .checkmark-check {
      transform-origin: 50% 50%;
      stroke-dasharray: 48;
      stroke-dashoffset: 48;
      animation: stroke .3s cubic-bezier(.65,0,.45,1) .8s forwards;
    }
    @keyframes stroke {
      100% { stroke-dashoffset: 0; }
    }
    @keyframes scale {
      0%, 100% { transform: none; }
      50% { transform: scale3d(1.1, 1.1, 1); }
    }
    @keyframes fill {
      100% { box-shadow: inset 0 0 0 40px #059669; }
    }
    /* Hide fake fields */
    .fake-field {
      position: absolute;
      left: -9999px;
      opacity: 0;
      pointer-events: none;
    }
  </style>
</head>
<body class="bg-cover bg-center min-h-screen flex items-center justify-center p-4">
  <header class="absolute top-0 left-0 p-6 flex items-center space-x-4">
    <img src="/images/1750537024956-logo_unand.png" alt="Logo Unand" class="h-14">
    <div class="text-white">
      <h2 class="text-lg font-bold">FAKULTAS TEKNOLOGI INFORMASI</h2>
      <p class="text-sm">UNIVERSITAS ANDALAS</p>
    </div>
  </header>

  <!-- Main Content -->
  <main id="login-container" class="bg-white/20 backdrop-blur-sm rounded-2xl shadow-xl max-w-6xl w-full flex flex-col md:flex-row overflow-hidden animate-fade-in">
    <!-- Kolom Kiri: Form Login -->
    <div class="w-full md:w-1/2 text-white flex flex-col justify-center p-8 sm:p-12">
      <h1 class="text-6xl font-bold mb-2">SIPAS</h1>
      <p class="text-lg mb-8">Silahkan Login</p>
      
      <form id="loginForm" action="/login" method="POST" autocomplete="off">
        <!-- Fake fields to trick browser autofill -->
        <input type="text" class="fake-field" autocomplete="username">
        <input type="password" class="fake-field" autocomplete="current-password">
        
        <div class="mb-4">
          <label for="username" class="block text-sm font-medium mb-1">Username</label>
          <input 
            type="text" 
            id="username" 
            name="username" 
            class="w-full text-black bg-white/80 border border-white/40 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-orange-500" 
            required 
            autocomplete="new-password"
            readonly
            onfocus="this.removeAttribute('readonly');"
          >
        </div>
        <div class="mb-6">
          <label for="password" class="block text-sm font-medium mb-1">Password</label>
          <input 
            type="password" 
            id="password" 
            name="password" 
            class="w-full text-black bg-white/80 border border-white/40 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-orange-500" 
            required 
            autocomplete="new-password"
            readonly
            onfocus="this.removeAttribute('readonly');"
          >
        </div>
        <button type="submit" id="loginBtn" class="w-full bg-orange-600 hover:bg-orange-700 text-white font-bold py-3 rounded-lg transition-transform transform hover:scale-105">LOG IN</button>
      </form>

      <% if (typeof error !== 'undefined' && error) { %>
        <p class="text-red-400 mt-4 text-center font-semibold"><%= error %></p>
      <% } %>
    </div>

    <!-- Kolom Kanan: Gambar -->
    <div class="hidden md:flex w-1/2 items-center justify-center p-8">
      <img src="/images/gedung.jpg" alt="Gedung FTI" class="rounded-2xl object-cover w-full h-full">
    </div>
  </main>
  
  <!-- Success Popup (disembunyikan) -->
  <div id="success-popup" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden">
    <div class="bg-white rounded-2xl shadow-xl p-8 max-w-sm w-full text-center transform transition-all scale-95 opacity-0">
      <div class="checkmark-wrapper mx-auto">
        <svg class="checkmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52">
          <circle class="checkmark-circle" cx="26" cy="26" r="25" fill="none"/>
          <path class="checkmark-check" fill="none" d="M14.1 27.2l7.1 7.2 16.7-16.8"/>
        </svg>
      </div>
      <h2 class="text-2xl font-bold text-gray-800 mt-6">Login Berhasil!</h2>
      <p class="text-gray-600 mt-2">Anda akan diarahkan ke halaman admin...</p>
    </div>
  </div>

  <script>
    // Clear form fields when page loads and focus on username
    document.addEventListener('DOMContentLoaded', function() {
      // Clear fields after a short delay to ensure they're empty
      setTimeout(function() {
        document.getElementById('username').value = '';
        document.getElementById('password').value = '';
        
        // Focus on username field
        document.getElementById('username').focus();
      }, 100);
    });

    // Prevent browser password confirmation popup
    document.getElementById('loginForm').addEventListener('submit', function(e) {
      e.preventDefault();
      
      const username = document.getElementById('username').value;
      const password = document.getElementById('password').value;
      
      if (username && password) {
        // Submit form programmatically without triggering browser popup
        const formData = new URLSearchParams();
        formData.append('username', username);
        formData.append('password', password);
        
        fetch('/login', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/x-www-form-urlencoded',
          },
          body: formData.toString()
        })
        .then(response => {
          if (response.redirected) {
            window.location.href = response.url;
          } else {
            window.location.href = '/login?error=Login gagal';
          }
        })
        .catch(error => {
          console.error('Error:', error);
          window.location.href = '/login?error=Terjadi kesalahan';
        });
      }
    });
  </script>
</body>
</html>